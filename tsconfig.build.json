{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ES2015",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["**/*.spec.tsx", "**/*.spec.ts", "node_modules", "dist"]
}
